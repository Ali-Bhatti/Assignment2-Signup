<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_marginBottom="15dp"
        android:layout_weight=".5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/btnColor">

        <LinearLayout
            android:id="@+id/upperRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:contentDescription="@string/left_back_arrow"
                app:srcCompat="@drawable/ic_chevron_left_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/person"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/person"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:id="@+id/upperRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/camera" />

                <TextView
                    android:id="@+id/updateCoverPhoto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:text="Update Cover Photo"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_weight=".5"
        android:orientation="vertical"

        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#131111"
                android:textColorHighlight="@color/lightBlue"
                android:textCursorDrawable="@drawable/cursor_color" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/lightBlue"
                android:textColorLink="@color/btnColor"
                android:textCursorDrawable="@drawable/cursor_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/lightBlue"
                android:textColorLink="@color/lightBlue"
                android:textCursorDrawable="@drawable/cursor_color" />

            <EditText
                android:id="@+id/conPassword"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/lightBlue"
                android:textColorLink="@color/lightBlue"
                android:textCursorDrawable="@drawable/cursor_color" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <EditText
                android:id="@+id/Month"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="Month"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/lightBlue"
                android:textColorLink="@color/lightBlue"
                android:textCursorDrawable="@drawable/cursor_color" />

            <EditText
                android:id="@+id/Day"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="Day"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/lightBlue"
                android:textColorLink="@color/lightBlue"
                android:textCursorDrawable="@drawable/cursor_color" />

            <EditText
                android:id="@+id/Year"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/editview_border"
                android:ems="10"
                android:hint="Year"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHighlight="@color/lightBlue"
                android:textColorLink="@color/lightBlue"
                android:textCursorDrawable="@drawable/cursor_color" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="20dp"
                android:background="@color/btnColor"
                android:text="GET STARTED"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:text="Terms and Condition"
            android:textColor="@color/btnColor"
            android:textSize="20sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>